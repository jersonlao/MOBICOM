<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.babyface"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/babyface_logo"
        android:logo="@drawable/applogo"
        android:theme="@style/CustomTheme"
        android:debuggable="true" >
        <activity
            android:name="com.example.babyface.Splash"
            android:label="BabyFace"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.babyface.MainActivity"
            android:label=" " >
            <intent-filter>
                <action android:name="com.example.babyface.MAINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.babyface.DiaryEntryView"
            android:theme="@android:style/Theme.NoTitleBar" >
            
        </activity>
    </application>

</manifest>
